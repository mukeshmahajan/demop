package database

import (
	"log"
	"DemoProject/person"
  "github.com/jinzhu/gorm/dialects/mysql"
	"github.com/jinzhu/gorm"
)

var DB *gorm.DB

func ConnectDatabase() {
  database, err := gorm.Open("mysql", "test.db")

  if err != nil {
    panic("Failed to connect to database!")
  }

  database.AutoMigrate(&user{})

  DB = database
}

